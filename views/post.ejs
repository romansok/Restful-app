
    <% include partials/header %>

    <div class="panel panel-info">
        <div class="panel-heading">Post details:</div>
        <div class="panel-body">
            <form action="/post/<%= usr._id %>/<%= id %>?_method=PUT" method="POST">
                <div class="form-group">
                <% usr.posts.forEach(pst => { %>
                    <% if  (pst._id  == id) { %>
                        <label for="title">Title:</label>
                        <textarea type="text" class="form-control" name="title"><%= pst.title %></textarea> 
                        <label for="body">  Body:  :</label>
                        <textarea class="form-control" rows="5" name="body"><%= pst.body %></textarea>
                    <%  } %>
                <%  }) %>
                    <button  type="submit" class="btn btn-success">Update</button>                                          
                </div>
            </form>
            <form action="/post/<%= usr._id %>/<%= id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form> 
        </div>
    </div>
                  
  
      <% include partials/footer %>
  