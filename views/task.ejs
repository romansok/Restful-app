
    <% include partials/header %>

    <div class="panel panel-info">
        <div class="panel-heading">Task Details:</div>
        <div class="panel-body">
            <form action="/task/<%= usr._id %>/<%= id %>?_method=PUT" method="POST">
                <div class="form-group">
                <% usr.tasks.forEach(tsk => { %> 
                    <% if  (tsk._id  == id) { %> 
                        <label for="title">Title:</label>
                        <textarea type="text" class="form-control" name="title"><%= tsk.title %></textarea><br> 
                        <label >Status:</label>                          
                        <select class="form-control" name="status" style="width: 200px;">                                               
                        <% if  (tsk.completed == true) { %>
                            <option value="true">Completed</option>
                            <option value="false">In Progress...</option>
                        <%  } %>
                        <% if  (tsk.completed == false) { %>
                            <option value="false">In Progress...</option>
                            <option value="true">Completed</option>
                        <%  } %>
                      </select><br>
                    <%  } %>
                 <%  }) %>
                 <button  type="submit" class="btn btn-success">Update</button>                                          
                </div>
            </form>
            <form action="/task/<%= usr._id %>/<%= id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form> 
        </div>
    </div>

  
      <% include partials/footer %>
  